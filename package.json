{
  "name": "safetube",
  "version": "1.0.0",
  "description": "A kid-friendly video application",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:all": "yarn build:main && yarn build:preload && yarn build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "preview": "vite preview",
    "electron:dev": "concurrently \"yarn dev\" \"yarn build:main && yarn build:preload && NODE_ENV=development npx electron-nightly .\"",
    "electron:build": "yarn build:all && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "build": {
    "appId": "com.safetube.app",
    "productName": "SafeTube",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.7",
    "@shadcn/ui": "^0.0.4",
    "@types/video.js": "^7.3.58",
    "clsx": "^2.1.1",
    "electron": "^36.3.2",
    "electron-log": "^5.4.0",
    "node-dlna": "^0.0.1",
    "node-ssdp": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "video.js": "^8.22.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron-builder": "^26.0.12",
    "electron-nightly": "^38.0.0-nightly.20250602",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.4",
    "vite": "^6.3.5",
    "vitest": "^3.2.0"
  }
}
