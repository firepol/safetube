{
  "name": "safetube",
  "version": "1.0.0",
  "description": "A kid-friendly video application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:all": "yarn build:main && yarn build:preload && yarn build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"yarn dev\" \"yarn build:main && yarn build:preload && npx electron-nightly .\""
  },
  "build": {
    "appId": "com.safetube.app",
    "productName": "SafeTube",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shadcn/ui": "^0.0.4",
    "electron": "^36.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.5.0",
    "concurrently": "^9.1.2",
    "electron-builder": "^26.0.12",
    "electron-nightly": "^38.0.0-nightly.20250602",
    "electron-squirrel-startup": "^1.0.1",
    "vite": "^6.3.5"
  }
}
