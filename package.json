{
  "name": "safetube",
  "version": "1.0.0",
  "description": "A kid-friendly video application",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.shared.json && tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:all": "yarn build:main && yarn build:preload && yarn build",
    "lint": "eslint . --config eslint.config.basic.js --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --config eslint.config.basic.js --ext ts,tsx --fix",
    "lint:aggressive": "eslint . --config eslint.config.aggressive.js --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:aggressive:fix": "eslint . --config eslint.config.aggressive.js --ext ts,tsx --fix",
    "preview": "vite preview",
    "killserver:linux": "lsof -ti:5173 | xargs kill -9 2>/dev/null || echo 'No server running on port 5173'",
    "killserver:mac": "lsof -ti:5173 | xargs kill -9 2>/dev/null || echo 'No server running on port 5173'",
    "killserver:win": "for /f \"tokens=5\" %a in ('netstat -aon ^| findstr :5173') do taskkill /f /pid %a 2>nul || echo No server running on port 5173",
    "killserver": "yarn killserver:linux",
    "killserver:robust": "./scripts/kill-server.sh",
    "killserver:robust:win": "scripts\\kill-server.bat",
    "electron:dev": "yarn killserver:robust && concurrently \"yarn dev\" \"yarn build:main && yarn build:preload && ./scripts/start-electron.sh\"",
    "electron:dev:win": "yarn killserver:robust:win && concurrently \"yarn dev\" \"yarn build:main && yarn build:preload && scripts\\start-electron.bat\"",
    "electron:build": "yarn build:all && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:fast": "vitest run --exclude=**/*.integration.test.ts",
    "test:integration": "vitest run --reporter=verbose src/renderer/services/*.integration.test.ts",
    "test:unit": "vitest run --exclude=**/*.integration.test.ts",
    "test:run": "vitest run",
    "test:run:fast": "vitest run --exclude=**/*.integration.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.safetube.app",
    "productName": "SafeTube",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": "AppImage",
      "category": "Video"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.7",
    "@shadcn/ui": "^0.0.4",
    "@types/video.js": "^7.3.58",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.0",
    "electron-log": "^5.4.0",
    "node-dlna": "^0.0.1",
    "node-ssdp": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "tailwind-merge": "^3.3.0",
    "typescript": "^5.8.3",
    "video.js": "^8.22.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-nightly": "^38.0.0-nightly.20250602",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.0"
  }
}
